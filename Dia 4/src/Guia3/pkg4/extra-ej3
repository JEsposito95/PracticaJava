/*
Elaborar un algoritmo en el cuál se ingrese una letra y se detecte si se trata de una vocal.
Caso contrario mostrar un mensaje. 
Nota: investigar la función equals() de la clase String.
 */
package clase4extra;

import java.util.Scanner;

/**
 *
 * @author Tecno
 */
public class ej3extra {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Scanner leer = new Scanner (System.in);
        System.out.println("Ingresar una letra");
        String letra = leer.next();
        letra=letra.toUpperCase();
        
        if (letra.equals("A") || letra.equals("E")||letra.equals("I")||letra.equals("O")||letra.equals("U")){
            System.out.println("La letra ingresada es un vocal");
        }else{
            System.out.println("La letra ingresada es una consonante");
        }
       
    }
    
}
