/*
Leer la altura de N personas y determinar el promedio de estaturas que se encuentran
por debajo de 1.60 mts. y el promedio de estaturas en general.

 */
package clase4extra;

import java.util.Scanner;

/**
 *
 * @author Tecno
 */
public class ej6Extra {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Scanner leer = new Scanner(System.in);
        System.out.println("Ingrese la cantidad de personas");
        int personas = leer.nextInt();
        double estatura;
        int menores = 0;
        double promediogeneral = 0;
        double promediomenores = 0;

        for (int i = 1; i <= personas; i++) {
            System.out.println("Ingrese la estatura: ");
            estatura = leer.nextDouble();
            promediogeneral += estatura;

            if (estatura <= 1.6) {
                menores++;
                promediomenores += estatura;
            }
        }
        System.out.println("Promedio general: " + (promediogeneral / personas));
        System.out.println("Promedio enanos: " + (promediomenores / menores));
    }
}
