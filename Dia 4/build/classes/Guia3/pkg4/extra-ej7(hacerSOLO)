/*
Realice un programa que calcule y visualice el valor máximo,
el valor mínimo y el promedio de n números (n>0).
El valor de n se solicitará al principio del programa y
los números serán introducidos por el usuario. 
Realice dos versiones del programa, una usando el bucle “while” y otra con el bucle “do - while”.
 */
package clase4extra;

import java.util.Scanner;

/**
 *
 * @author Tecno
 */
public class ej7extra {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
       Scanner leer= new Scanner (System.in);
        System.out.println("Ingrese la cantidad de numeros:");
       int n = leer.nextInt();
       int i =1;
       int max=0;
       int min=0;
       int num;
       double promedio=0;
       boolean primero=false;
       
       
       while(i<=n){
           System.out.println("Ingrese el numero:");
           num=leer.nextInt();
           
           if (num> max){
               max=num;
           }
           if(primero==false){
               min=num;
               primero= true;
           }
           if (num < min){
               min=num;
           }
           promedio+=num;
           i++;
    }
        System.out.println("El promedio total de los numeros ingresados es: "+(promedio/n));
               System.out.println("El menor numero ingresado fue: "+min);
               System.out.println("El mayor numero ingresado fue: "+max);
               
    }
    
}
