/*
Dado un tiempo en minutos, calcular su equivalente en días y horas. 
Por ejemplo, si el usuario ingresa 1600 minutos,
el sistema debe calcular su equivalente: 1 día, 2 horas.
 */
package clase4extra;

import java.util.Scanner;

/**
 *
 * @author Tecno
 */
public class Clase4extra {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
      Scanner leer = new Scanner (System.in);
        System.out.println("Ingrese la cantidad de minutos");
        int minutos = leer.nextInt();
        int dias;
        int horas;
        
        dias = Math.round(minutos / 1440);
        horas = Math.round((minutos % 1440)/60);
        System.out.println("Los dias son: "+dias+" Las horas son: "+horas);
    }
    
}
